# Discord OAuth credentials
# Create an application at https://discord.com/developers/applications
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret

# NextAuth.js configuration
# Generate a secret with: openssl rand -base64 32
NEXTAUTH_SECRET=your_nextauth_secret
# Use your actual production domain here
NEXTAUTH_URL=https://your-production-domain.com

# Node environment
NODE_ENV=production

# Database connection string
# This will be overridden by the docker-compose.prod.yml file
DATABASE_URL="postgresql://xivvoices:xivvoices_password@postgres:5432/xivvoices_db?schema=public"

# Database credentials (used by docker-compose.prod.yml)
POSTGRES_USER=xivvoices
POSTGRES_PASSWORD=use_a_strong_password_here
POSTGRES_DB=xivvoices_db